<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:divider="@drawable/divider"
    android:showDividers="middle"
    tools:context="com.example.shoddiq.binarandoridassessmenttest.view.DetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/content_circle"
            android:layout_height="@dimen/content_circle"
            android:layout_marginBottom="@dimen/content_margin"
            android:layout_marginRight="@dimen/content_margin"
            android:layout_marginTop="@dimen/content_margin"
            android:layout_marginLeft="@dimen/content_margin"
            android:background="@drawable/bg_circle">

            <TextView
                android:id="@+id/act_detail_icon_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/content_char"
                tools:text="T" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/content_margin"
            android:layout_marginBottom="@dimen/content_margin"
            android:layout_marginRight="@dimen/content_margin">

            <TextView
                android:id="@+id/act_detail_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="@dimen/content_name"
                tools:text="Smartphone"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/act_detail_date_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"
                tools:ignore="RtlCompat"
                tools:text="12/12/2017"
                android:textSize="@dimen/detail_date"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/content_margin"
            android:layout_marginRight="@dimen/content_margin"
            android:layout_marginTop="@dimen/content_margin"
            android:layout_marginBottom="@dimen/content_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/add_label"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/add_supplier" />

            <TextView
                android:id="@+id/act_detail_supplier_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:inputType="text"
                android:textColor="@android:color/black"
                android:textSize="@dimen/add_input"
                tools:hint="Supplier's Name"
                tools:textColorHint="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/content_margin"
            android:layout_marginRight="@dimen/content_margin"
            android:layout_marginBottom="@dimen/content_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/add_label"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/add_total" />

            <TextView
                android:id="@+id/act_detail_total_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/transparent"
                android:inputType="number"
                android:textColor="@android:color/black"
                android:textSize="@dimen/add_input"
                tools:hint="Total"
                tools:textColorHint="@android:color/black" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/act_detail_other_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Others"
        android:padding="@dimen/content_margin"/>
</LinearLayout>
